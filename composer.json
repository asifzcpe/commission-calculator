{
    "name": "asif/commissopn-calculator",
    "description": "CommissionCalculator for the calculation",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\CommissionCalculator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\CommissionCalculator\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.15",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": [
            "@phpunit",
            "@test-cs"
        ]
    }
}
